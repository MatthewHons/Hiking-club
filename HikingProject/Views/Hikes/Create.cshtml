@model HikingProject.Models.Hikes
@using HikingProject.Controllers

@{
    DateTime localDate = DateTime.Now;

    Random rnd = new Random();
    var random = rnd.Next(1, 43);
    ViewData["Title"] = "Create";
}

<h2>Création</h2>

<hr />
<div class="row text-center">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Hikes" class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="name" class="control-label">Intitulé</label>
                <textarea asp-for="name" class="form-control"></textarea>
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="province" for="province" class="control-label">Province</label>
                <select asp-for="province" class="form-control" id="province" name="province">
                    <option value="Liège">Liège</option>
                    <option value="Namur">Namur</option>
                    <option value="Hainaut">Hainaut</option>
                    <option value="Luxembourg">Luxembourg</option>
                    <option value="Brabant wallon">Brabant wallon</option>
                    <option value="Brabant flamand">Brabant flamand</option>
                    <option value="Anvers">Anvers</option>
                    <option value="Limbourg">Limbourg</option>
                    <option value="Flandre orientale">Flandre orientale</option>
                    <option value="Flandre occidentale">Flandre occidentale</option>
                </select>
                <span asp-validation-for="province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="difficulty" for="difficulty" class="control-label">Difficulté</label>
                <select asp-for="difficulty" class="form-control" id="difficulty" name="difficulty">
                    <option value="Très facile">Très facile</option>
                    <option value="Facile">Facile</option>
                    <option value="Moyen">Moyen</option>
                    <option value="Difficile">Difficile</option>
                    <option value="Très difficile">Très difficile</option>
                </select>
                <span asp-validation-for="difficulty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="distance" class="control-label">Distance (km)</label>
                <input type="number" asp-for="distance" class="form-control" cols="80" rows="10">
                <span asp-validation-for="distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="duration" class="control-label">Durée (minutes)</label>
                <input type="number" asp-for="duration" class="form-control" cols="80" rows="10">
                <span asp-validation-for="duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="elevation_gain" class="control-label">Élévation (m)</label>
                <input type="number" asp-for="elevation_gain" class="form-control" cols="80" rows="10">
                <span asp-validation-for="elevation_gain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" cols="80" rows="10" asp-for="link" value="@random">
                <span asp-validation-for="link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" class="form-control" cols="80" rows="10" asp-for="created_at" value="@localDate">
                <span asp-validation-for="created_at" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>